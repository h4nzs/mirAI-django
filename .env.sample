# .env.sample
# This file provides a template for the environment variables.
# For local development, you can copy this file to .env and fill in the values.
# IMPORTANT: DO NOT commit the .env file to version control.

# --- Django Core Settings ---
# A secure, randomly generated secret key for your Django project.
# You can generate one using Django's get_random_secret_key() function.
DJANGO_SECRET_KEY="your-super-secret-and-long-django-key"

# Set to True for local development, False for production.
# Controls error page details and other development features.
DEBUG=True

# A comma-separated list of hosts/domains your Django site can serve.
# For local development, "localhost,127.0.0.1" is usually sufficient.
ALLOWED_HOSTS=localhost,127.0.0.1


# --- External API Keys ---
# Your API key for The Movie Database (TMDB).
TMDB_API_KEY=""

# Your API key for Google AI Studio (Gemini).
GOOGLE_AI_API_KEY=""
